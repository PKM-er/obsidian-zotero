{
  "extends": "@aidenlx/eslint-config",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "incremental": false,
    "noEmit": false,
    "paths": {
      "@log": ["./logger.ts"],
      "@api": ["./api.ts"],
      "@init": ["./init.ts"],
      "@knex": ["./modules/db/knex.config.ts"]
    }
  },
  "include": ["src/**/*.ts"]
}
